<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pilot_smile_slider_form.slider_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Page Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Pilot\Smile\Block\Adminhtml\Slider\SaveAndContinueButton"/>
            <button name="save" class="Pilot\Smile\Block\Adminhtml\Slider\SaveButton"/>
            <button name="reset" class="Pilot\Smile\Block\Adminhtml\Slider\ResetButton"/>
            <button name="delete" class="Pilot\Smile\Block\Adminhtml\Slider\DeleteButton"/>
            <button name="back" class="Pilot\Smile\Block\Adminhtml\Slider\BackButton"/>
        </buttons>
        <namespace>pilot_smile_slider_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>pilot_smile_slider_form.slider_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="slider_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="pilot_smile/slider/save"/>
        </settings>
        <dataProvider class="Pilot\Smile\Model\Slider\DataProvider" name="slider_form_data_source">
            <settings>
                <requestFieldName>slide_id</requestFieldName>
                <primaryFieldName>slide_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="slide_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">slider</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>slide_id</dataScope>
            </settings>
        </field>
        <field name="slide_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">slider</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Slide Title</label>
                <dataScope>slide_title</dataScope>
            </settings>
        </field>
        <field name="slide_description" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">slider</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Slide description</label>
                <dataScope>slide_description</dataScope>
            </settings>
        </field>
        <field name="slider_image" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">FaqGroup</item>
                    <item name="label" xsi:type="string" translate="true">Slider Image</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Pilot_Smile/image-preview</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="pilot_smile/slider/upload"/>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>

