<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pilot_smile_settings_form.smile_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Theme settings options</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Pilot\Smile\Block\Adminhtml\Options\SaveButton"/>
            <!--<button name="save_and_continue" class="Pilot\smile\Block\Adminhtml\Settings\SaveAndContinueButton"/>
            <button name="reset" class="Guri\smile\Block\Adminhtml\Location\ResetButton"/>
            <button name="delete" class="Guri\smile\Block\Adminhtml\Location\DeleteButton"/>
            <button name="back" class="Guri\smile\Block\Adminhtml\Location\BackButton"/>-->
        </buttons>
        <layout>
            <!-- <navContainerName>left</navContainerName> -->
            <type>tabs</type>
        </layout>
        <namespace>pilot_smile_settings_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>pilot_smile_settings_form.smile_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="smile_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="pilot_smile/settings/save"/>
        </settings>
        <dataProvider class="Pilot\Smile\Model\Options\DataProvider" name="smile_form_data_source">
            <settings>
                <requestFieldName>option_id</requestFieldName>
                <primaryFieldName>option_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Header Settings</item>
            </item>
        </argument>
        <settings>
            <label translate="true">Header Settings</label>
        </settings>
        <field name="header_email"  formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Heade Email</label>
                <dataScope>option_name</dataScope>
                <dataScope>option_name</dataScope>
            </settings>
        </field>
        <field name="header_phone"  formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Header Phone</label>
                <dataScope>header_phone</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
