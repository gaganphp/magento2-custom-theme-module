<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
                <referenceContainer name="js">
                    <block class="Magento\Backend\Block\Template" name="js.system_config_js" template="Magento_Config::system/config/js.phtml"/>
                </referenceContainer>
                <referenceContainer name="content">
                    <block class="Pilot\Smile\Block\Options" name="pilot.smile.options" template="Pilot_Smile::theme/options/settings.phtml" before="-"/>
                </referenceContainer>
        </referenceContainer>
    </body>
</page>
